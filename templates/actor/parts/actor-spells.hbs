<ol class='items-list'>
  {{#each spells as |spells spellType|}}
    <li class='item flexrow items-header'>
      <div class='item-name'>
          {{localize (concat 'RUNESCAPE_KINGDOMS.Item.Spell.type.' spellType)}}
      </div>
      <div class='item-controls'>
        <a
          class='item-control item-create'
          title='{{localize "DOCUMENT.Create" type='Spell'}}'
          data-type='spell'
          data-spell-type='{{spellType}}'
        >
          <i class='fas fa-plus'></i>
            {{localize (concat 'RUNESCAPE_KINGDOMS.Item.Spell.add.' spellType)}}
        </a>
      </div>
    </li>
    {{#each spells as |item id|}}
      <li class='item flexrow' data-item-id='{{item._id}}'>
        <div class='item-name flexrow spell rollable rollable-spell' data-item-id='{{item._id}}'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'><img
                src='{{item.img}}'
                title='{{item.name}}'
                width='24'
                height='24'
              /></a>
          </div>
          <h4>{{item.name}}</h4>
        </div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Update" type='spell'}}'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
            title='{{localize "DOCUMENT.Delete" type='spell'}}'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
    {{/each}}
  {{/each}}
</ol>