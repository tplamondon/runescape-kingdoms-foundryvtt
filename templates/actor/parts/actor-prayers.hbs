<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>
        {{localize 'RUNESCAPE_KINGDOMS.Item.Prayer.prayers'}}
    </div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type='prayer'}}'
        data-type='prayer'
      >
        <i class='fas fa-plus'></i>
          {{localize 'RUNESCAPE_KINGDOMS.Item.Prayer.add'}}
      </a>
    </div>
  </li>
  {{#each prayers as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name flexrow prayer rollable rollable-prayer' data-item-id='{{item._id}}'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'><img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            /></a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-controls'>
        <a
          class="item-control item-enable"
          title="{{localize "RUNESCAPE_KINGDOMS.SheetLabels.Enable"}}"
          >
          <i class="{{#if item.system.enabled}}fas{{else}}far{{/if}} fa-diamond"></i>
        </a>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Update" type='prayer'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='prayer'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>